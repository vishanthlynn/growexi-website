{
  "name": "growexi-website",
  "version": "1.0.0",
  "description": "GROWEXI Rwanda - Transformative Learning and Innovation Hub",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start"
  },
  "keywords": [
    "education",
    "training",
    "rwanda",
    "skills-development",
    "innovation",
    "mern-stack"
  ],
  "author": "GROWEXI Rwanda",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
